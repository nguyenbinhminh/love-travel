//- Sidebar Header
mixin sidebarHeader(caption="", title="", typeUnderline="")
	if caption !== ""
		h3.sidebar-header-caption= caption
		case typeUnderline
			when ""
				h2.sidebar-header-title.text-underline= title
			when "yellow--light"
				h2.sidebar-header-title.title-underline-yellow--light.text-underline= title
			when "orange"
				h2.sidebar-header-title.title-underline-orange.text-underline= title
			when "yellow"
				h2.sidebar-header-title.title-underline-yellow.text-underline= title
			when "red"
				h2.sidebar-header-title.title-underline-red.text-underline= title
			when "green"
				h2.sidebar-header-title.title-underline-green.text-underline= title
			when "blue"
				h2.sidebar-header-title.title-underline-blue.text-underline= title
	else
		span.text-warning Thiếu caption

//- Sidebar Packages
mixin sidebarPackagesItem(srcImage= "", place= "", href= "", location="", price="", type="")
	li.sidebar-packages-item
		img(src= srcImage, alt= place).sidebar-packages-image
		.sidebar-packages-info
			a(href= href).sidebar-packages-info-title= place
			a(href= href).sidebar-packages-info-link
				img(src="./images/icon-location.png", alt="Icon Location").sidebar-packages-info-image
				span.sidebar-packages-info-location= location
			case type
				when ""
				when "orange"
					h3.sidebar-packages-info-price.btn.btn-sm.lg-orange= price
				when "orange-rev"
					h3.sidebar-packages-info-price.btn.btn-sm.lg-orange-rev= price
				when "red"
					h3.sidebar-packages-info-price.btn.btn-sm.lg-red= price
				when "violet"
					h3.sidebar-packages-info-price.btn.btn-sm.lg-violet= price
				when "green"
					h3.sidebar-packages-info-price.btn.btn-sm.lg-green= price
				when "blue"
					h3.sidebar-packages-info-price.btn.btn-sm.lg-blue= price

//- Single Package
mixin singlePackage(srcImage= "", srcIcon= "", title= "", quantity= "0", linkPackages= {})
	.single-package-image(style= `background: linear-gradient(to bottom, rgba(101, 100, 96, 0) 0%, rgba(101, 100, 96, 0.1) 60%, rgba(101, 100, 96, 0.65) 100%), url(${srcImage}) center center / cover no-repeat`)
		.single-package-info
			img(src= srcIcon, alt="Icon").single-package-icon
			.single-package-detail
				h3.single-package-title= title
				h4.single-package-quantity= quantity + " Packages"
		.single-package-gradient
			h3.single-package-title Packages
			ul.single-package-list
				each val, key in linkPackages
					li.single-package-item
						a(href= val).single-package-link= key
			a(href="#").btn.btn-sm.single-package-btn View Destination

//- Block Title
mixin blockTitle(caption= "", wordNormal= "", wordUnderline= "", colorUnderline= "", align= "center")
	if align == "left"
		h3.block-caption(class=`txt-${align}`)= caption
		h2.block-title(class=`txt-${align}`) #{wordNormal} #[span(class=`title-underline-${colorUnderline}`) #{wordUnderline}]
	if align == "right"
		h3.block-caption(class=`txt-${align}`)= caption
		h2.block-title(class=`txt-${align}`) #{wordNormal} #[span(class=`title-underline-${colorUnderline}`) #{wordUnderline}]
	if align == "center"
		h3.block-caption(class=`txt-${align}`)= caption
		h2.block-title(class=`txt-${align}`) #{wordNormal} #[span(class=`title-underline-${colorUnderline}`) #{wordUnderline}]

