//- Sub Nav
mixin subNavItem(linkSubNav="", hrefSubNav="#", type="")
	if linkSubNav !== ""
		case type
			when ""
				li.nav-subnav-item
					a(href= hrefSubNav).nav-subnav-link= linkSubNav
					if block
						block
			when "hot"
				li.nav-subnav-item
					a(href= hrefSubNav).nav-subnav-link.nav-subnav-link--hot= linkSubNav
					if block
						block
			when "best"
				li.nav-subnav-item
					a(href= hrefSubNav).nav-subnav-link.nav-subnav-link--best= linkSubNav
					if block
						block
			when "new"
				li.nav-subnav-item
					a(href= hrefSubNav).nav-subnav-link.nav-subnav-link--new= linkSubNav
					if block
						block
			when "sub"
				li.nav-subnav-item
					a(href= hrefSubNav).nav-subnav-link.nav-subnav-link--sub= linkSubNav
					if block
						block

//- Nav
mixin navItem(link="", href="#", type="")
	if link !== ""
		case type
			when ""
				li.nav-item
					a(href= href).nav-link= link
					if block
						block
			when "special"
				li.nav-item
					a(href= href).nav-link.nav-link--special= link
					if block
						block

//- Header content List - Item
mixin contentItem(href="", src="", text="")
	li.header-content-item
		if href !== ""
			a(href= href).header-content-link
				if src !== ""
					img(src= src, alt="Icon Relax").header-content-image
					if text !== ""
						h3.header-content-text= text
					else
						span.text-warning Thiếu tiêu đề cho ảnh rồi!
				else
					span.text-warning Thiếu đường dẫn hình ảnh rồi!
		else
			span.text-warning Cấu trúc contentItem(href, src, text) Thiếu link cho item này rồi!

